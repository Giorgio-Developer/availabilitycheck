<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione CSV - <%= roomName %></title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        body {
            background-color: #121212;
            color: #ffffff;
        }
        .container {
            margin-top: 3rem;
        }
        .page-title {
            color: #03a9f4;
            font-weight: 700;
            text-align: center;
            margin-bottom: 2rem;
        }
        .card {
            background-color: #1f1f1f;
            border-color: #03a9f4;
            border-radius: 0.5rem;
            margin-bottom: 2rem;
        }
        .card-header {
            background-color: #03a9f4;
            color: #ffffff;
            font-weight: 600;
        }
        .btn-primary {
            background-color: #03a9f4;
            border-color: #03a9f4;
        }
        .btn-primary:hover {
            background-color: #0288d1;
            border-color: #0288d1;
        }
        .btn-secondary {
            background-color: #424242;
            border-color: #424242;
        }
        .form-control {
            background-color: #2a2a2a;
            border-color: #424242;
            color: #ffffff;
        }
        .form-control:focus {
            background-color: #2a2a2a;
            border-color: #03a9f4;
            color: #ffffff;
            box-shadow: 0 0 0 0.2rem rgba(3, 169, 244, 0.25);
        }
        .alert {
            border-radius: 0.5rem;
        }
        .upload-area {
            border: 2px dashed #03a9f4;
            border-radius: 0.5rem;
            padding: 2rem;
            text-align: center;
            transition: background-color 0.3s ease;
        }
        .upload-area:hover {
            background-color: rgba(3, 169, 244, 0.1);
        }
        .file-info {
            margin-top: 1rem;
            padding: 1rem;
            background-color: #b5daff;
            border-radius: 0.375rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <h1 class="page-title">
                    <i class="material-icons" style="vertical-align: middle; margin-right: 10px;">folder</i>
                    Gestione CSV - <%= roomName %>
                </h1>

                <!-- Sezione Download -->
                <div class="card">
                    <div class="card-header">
                        <i class="material-icons" style="vertical-align: middle; margin-right: 8px;">download</i>
                        Download CSV
                    </div>
                    <div class="card-body">
                        <p class="mb-3">Scarica il file CSV attuale per modificarlo offline con Excel, LibreOffice o un editor di testo.</p>
                        <a href="/admin/csv/download/<%= roomName %>" class="btn btn-primary">
                            <i class="material-icons" style="vertical-align: middle; margin-right: 8px;">file_download</i>
                            Scarica <%= roomName %>.csv
                        </a>
                    </div>
                </div>

                <!-- Sezione Upload -->
                <div class="card">
                    <div class="card-header">
                        <i class="material-icons" style="vertical-align: middle; margin-right: 8px;">upload</i>
                        Upload CSV
                    </div>
                    <div class="card-body">
                        <p class="mb-3">Carica un file CSV modificato. Il file verr√† validato prima della sostituzione.</p>

                        <form id="uploadForm" enctype="multipart/form-data">
                            <div class="upload-area" id="uploadArea">
                                <i class="material-icons" style="font-size: 3rem; color: #03a9f4;">cloud_upload</i>
                                <p class="mt-2 mb-0">Trascina qui il file CSV o clicca per selezionarlo</p>
                                <input type="file" id="csvFile" name="csvFile" accept=".csv" style="display: none;" />
                            </div>

                            <div id="fileInfo" class="file-info" style="display: none;">
                                <p class="mb-2"><strong>File selezionato:</strong> <span id="fileName"></span></p>
                                <p class="mb-0"><strong>Dimensione:</strong> <span id="fileSize"></span></p>
                            </div>

                            <div class="mt-3">
                                <button type="submit" id="uploadBtn" class="btn btn-primary" disabled>
                                    <i class="material-icons" style="vertical-align: middle; margin-right: 8px;">file_upload</i>
                                    Carica e Sostituisci
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Sezione Risultati -->
                <div id="resultAlert" style="display: none;"></div>

                <!-- Sezione AI Validation -->
                <div id="aiValidation" class="card" style="display: none;">
                    <div class="card-header">
                        <i class="material-icons" style="vertical-align: middle; margin-right: 8px;">psychology</i>
                        Validazione AI
                    </div>
                    <div class="card-body" id="aiValidationContent" style="background-color: #b5daff;">
                    </div>
                </div>

                <!-- Pulsanti di Navigazione -->
                <div class="mt-4 text-center">
                    <a href="/admin/dashboard" class="btn btn-secondary me-2">
                        <i class="material-icons" style="vertical-align: middle; margin-right: 8px;">arrow_back</i>
                        Torna alla Dashboard
                    </a>
                    <a href="/admin/edit/<%= roomName %>" class="btn btn-secondary">
                        <i class="material-icons" style="vertical-align: middle; margin-right: 8px;">edit</i>
                        Editor Online
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('csvFile');
        const fileInfo = document.getElementById('fileInfo');
        const fileName = document.getElementById('fileName');
        const fileSize = document.getElementById('fileSize');
        const uploadBtn = document.getElementById('uploadBtn');
        const uploadForm = document.getElementById('uploadForm');
        const resultAlert = document.getElementById('resultAlert');
        const aiValidation = document.getElementById('aiValidation');
        const aiValidationContent = document.getElementById('aiValidationContent');

        // Click to select file
        uploadArea.addEventListener('click', () => {
            fileInput.click();
        });

        // Drag and drop functionality
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.style.backgroundColor = 'rgba(3, 169, 244, 0.2)';
        });

        uploadArea.addEventListener('dragleave', (e) => {
            e.preventDefault();
            uploadArea.style.backgroundColor = '';
        });

        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.style.backgroundColor = '';
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                fileInput.files = files;
                handleFileSelection();
            }
        });

        // File selection handler
        fileInput.addEventListener('change', handleFileSelection);

        function handleFileSelection() {
            const file = fileInput.files[0];
            if (file) {
                fileName.textContent = file.name;
                fileSize.textContent = formatFileSize(file.size);
                fileInfo.style.display = 'block';
                uploadBtn.disabled = false;
            }
        }

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        // Form submission
        uploadForm.addEventListener('submit', async (e) => {
            e.preventDefault();

            const formData = new FormData();
            formData.append('csvFile', fileInput.files[0]);

            uploadBtn.disabled = true;
            uploadBtn.innerHTML = '<i class="material-icons" style="vertical-align: middle; margin-right: 8px;">hourglass_empty</i>Caricamento...';

            try {
                const response = await fetch('/admin/csv/upload/<%= roomName %>', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (result.success) {
                    showAlert('success', 'File CSV caricato e validato con successo!');
                    if (result.aiConfirmation) {
                        aiValidationContent.innerHTML = result.aiConfirmation;
                        aiValidation.style.display = 'block';
                    }
                } else {
                    showAlert('danger', 'Errore: ' + result.error);
                }
            } catch (error) {
                showAlert('danger', 'Errore durante il caricamento: ' + error.message);
            }

            uploadBtn.disabled = false;
            uploadBtn.innerHTML = '<i class="material-icons" style="vertical-align: middle; margin-right: 8px;">file_upload</i>Carica e Sostituisci';
        });

        function showAlert(type, message) {
            resultAlert.innerHTML = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            resultAlert.style.display = 'block';
            resultAlert.scrollIntoView({ behavior: 'smooth' });
        }
    </script>
</body>
</html>